<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="common_AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="common_toolbar_style" parent="@style/Widget.AppCompat.Toolbar">
        <!-- 解决Toolbar左边空白 -->
        <item name="contentInsetStart">0dp</item>
    </style>

    <style name="NoTitleTranslucentTheme" parent="common_AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@color/common_transparent_half</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <!-- toolbar文字按钮 -->
    <style name="common_toolbar_text_style">
        <item name="android:textSize">@dimen/common_text_content</item>
        <item name="android:textColor">@color/common_text_default</item>
    </style>

    <!-- toolbar标题 -->
    <style name="common_toolbar_topic_style">
        <item name="android:textSize">@dimen/common_text_topic</item>
        <item name="android:textColor">@color/common_white</item>
    </style>

