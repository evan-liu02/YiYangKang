<?xml version="1.0" encoding="utf-8"?>
<com.anju.yyk.common.widget.MyLayoutForGv xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/iv_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/dp_10"
        app:srcCompat="@mipmap/home_ic_photo_place" />

    <ImageButton
        android:id="@+id/btn_delete"
        android:layout_width="@dimen/dp_26"
        android:layout_height="@dimen/dp_26"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@mipmap/home_ic_close"
        android:visibility="gone" />
</com.anju.yyk.common.widget.MyLayoutForGv>