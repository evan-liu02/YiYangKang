<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.anju.yyk.common.widget.bottomnavigationviewex.BottomNavigationViewEx
        android:id="@+id/navigationBar"
        android:background="@color/common_white"
        android:layout_width="0dp"
        android:layout_height="@dimen/common_navigation_bar_height"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:itemIconTint="@color/home_menu_selector"
        app:itemTextColor="@color/home_menu_selector"
        app:menu="@menu/home_menu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <FrameLayout
        android:id="@+id/fl_container"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintBottom_toTopOf="@+id/navigationBar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>