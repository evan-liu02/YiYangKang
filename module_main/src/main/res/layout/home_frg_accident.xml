<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/common_bg_gray">

        <TextView
            android:id="@+id/home_textview9"
            style="@style/common_text_content_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="事件描述" />

        <EditText
            android:id="@+id/edt_content"
            style="@style/common_text_small_default"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:gravity="top|left"
            android:padding="@dimen/dp_10"
            android:hint="@string/home_add_accident_hint"
            android:background="@color/common_white"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/tv_record_time"
            style="@style/common_text_content_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:text="@string/common_record_time"
            app:layout_constraintTop_toBottomOf="@+id/edt_tip_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"/>

        <Button
            android:id="@+id/btn_record"
            style="@style/common_text_small_default"
            android:background="@drawable/common_corner_gray_line_bg"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:text="开始录音"/>

        <TextView
            android:id="@+id/home_textview"
            style="@style/common_text_content_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_10"
            android:text="添加照片" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/common_white"
            android:padding="@dimen/dp_10"/>

        <Button
            android:id="@+id/btn_commit"
            style="@style/common_text_small_white"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40"
            android:layout_marginTop="@dimen/dp_15"
            android:layout_marginBottom="@dimen/dp_15"
            android:background="@drawable/common_corner_theme_color_bg"
            android:layout_marginStart="@dimen/dp_15"
            android:layout_marginEnd="@dimen/dp_15"
            android:text="提交" />

    </LinearLayout>

</ScrollView>
