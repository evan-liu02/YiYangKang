<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="@dimen/common_space_10"
    android:paddingBottom="@dimen/common_space_10"
    android:paddingStart="@dimen/common_space_15"
    android:paddingEnd="@dimen/common_space_15">

    <TextView
        android:id="@+id/tv_name"
        style="@style/common_text_small_white"
        android:background="@drawable/common_corner_theme_btn_bg"
        android:paddingTop="@dimen/common_space_5"
        android:paddingBottom="@dimen/common_space_5"
        android:paddingEnd="@dimen/common_space_10"
        android:paddingStart="@dimen/common_space_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:text="隔壁老王" />

    <TextView
        android:id="@+id/tv_bed_number"
        style="@style/common_text_content_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_space_15"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_name"
        tools:text="32床" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/common_text_content_default"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/common_space_15"
        app:layout_constraintTop_toTopOf="@+id/tv_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_bed_number" />

    <TextView
        android:id="@+id/tv_scan_detail"
        style="@style/common_text_small_white"
        android:background="@drawable/common_smallcorner_theme_btn_bg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/common_space_5"
        android:paddingBottom="@dimen/common_space_5"
        android:paddingEnd="@dimen/common_space_10"
        android:paddingStart="@dimen/common_space_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/home_scan_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>